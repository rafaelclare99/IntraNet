@model IEnumerable<IntraNet.Models.Processo>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-folder2-open me-2"></i> Processos
        </h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Criar" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Novo Processo
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Nenhum processo cadastrado até o momento.
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title fw-semibold mb-1">
                                @item.Titulo
                            </h5>

                            <small class="text-muted">
                                <i class="bi bi-building me-1"></i>
                                Setor: @item.Setor
                            </small>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-secondary">
                                Admin
                            </span>
                        }
                    </div>

                    <hr class="my-3" />

                    <p class="card-text">
                        @item.Descricao
                    </p>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a href="@item.ArquivoPath"
                           class="btn btn-success btn-sm"
                           download>
                            <i class="bi bi-download me-1"></i> Baixar Arquivo
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex gap-2">
                                <a asp-action="Editar"
                                   asp-route-id="@item.ProcessoId"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                </a>

                                <a asp-action="Excluir"
                                   asp-route-id="@item.ProcessoId"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Deseja excluir este processo?');">
                                    <i class="bi bi-trash me-1"></i> Excluir
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>