@model Avisos

<h2>Novo Aviso</h2>

<form asp-action="Criar" method="post">
    <div class="mb-3">
        <label>Título</label>
        <input asp-for="Titulo" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Mensagem</label>
        <textarea asp-for="Mensagem" class="form-control" rows="4"></textarea>
    </div>

    <div class="mb-3">
        <label>Setor</label>
        <input asp-for="Setor" class="form-control" placeholder="Deixe vazio para geral" />
    </div>

    <button class="btn btn-success">Publicar</button>
</form>
